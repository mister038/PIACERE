<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <data>
            <record id="sale_order_amount" model="ir.ui.view">
                <field name="name">sale_order_amount.tree</field>
                <field name="model">sale.order.amount</field>
                <field name="arch" type="xml">
                    <tree string="Sale Order Amount" editable="bottom" decoration-info="sale_id != False">
                        <field name="amount" widget="monetary" sum="Total"/>
                        <field name="name"/>
                        <field name="sale_id" invisible="1"/>
                        <field name="date_order"/>
                        <field name="tc"/>
                        <field name="currency_id"/>
                        <field name="amount_mxn" widget="monetary" options="{'currency_field': 'currency_mxn_id'}" sum="Total MXN"/>
                        <field name="currency_mxn_id" invisible="1"/>
                        <field name="amount_usd" widget="monetary" options="{'currency_field': 'currency_usd_id'}" sum="Total USD"/>
                        <field name="currency_usd_id" invisible="1"/>
                        <field name="amount_eu" widget="monetary" options="{'currency_field': 'currency_eu_id'}" sum="Total EUR"/>
                        <field name="currency_eu_id" invisible="1"/>
                    </tree>
                </field>
            </record>
            
            <record id="action_sale_order_amount" model="ir.actions.act_window">
                <field name="name">Sales Orders Amounts</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">sale.order.amount</field>
                <field name="view_mode">tree</field>                
            </record>

            <menuitem id="menu_action_sale_order_amount"
                name="Sales Orders Amounts"
                parent="sale.sale_order_menu"
                action="action_sale_order_amount"
                sequence="60"/>
                
        </data>
    </odoo>
